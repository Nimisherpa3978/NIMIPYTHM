# This is the code for a Random password generator in python.
# We  use Pythonâ€™s built-in "random" and "string" modules in this project.
import random
import string

def generate_password(length=12):
    # Define character sets
    letters = string.ascii_letters
    digits = string.digits
    symbols = string.punctuation

    # Combine all characters
    all_chars = letters + digits + symbols

    # Ensure password has at least one of each type
    password = [
        random.choice(letters),
        random.choice(digits),
        random.choice(symbols)
    ]

    # Fill the rest of the password length
    password += random.choices(all_chars, k=length - 3)

    # Shuffle to ensure randomness
    random.shuffle(password)

    return ''.join(password)

def main():
    print("\nğŸ” Random Password Generator")
    try:
        length = int(input("Enter password length (minimum 6): "))
        if length < 6:
            print("âŒ Password length should be at least 6.")
        else:
            password = generate_password(length)
            print(f"\nâœ… Generated Password: {password}")
    except ValueError:
        print("âŒ Invalid input. Please enter a number.")

if __name__ == "__main__":
    main()
